{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2021",  
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true, 
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
  },
  "include": ["vite.config.ts", "src", ".eslintrc.cjs",]
}
